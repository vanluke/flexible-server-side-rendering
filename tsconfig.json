{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "es2016", "dom"],
    "rootDirs": ["src/client", "src/server", "config", "dist/stats.json"],
    "types": ["jest"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "checkJs": false,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*", "server.development.ts"],
  "exclude": [
    "config",
    ".storybook",
    "node_modules",
    "build",
    "webpack",
    "postcss.config.js",
    "jest"
  ]
}
