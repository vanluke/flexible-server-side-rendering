{
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "editor.formatOnSave": true,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.rulers": [120],
  "typescript.surveys.enabled": false
}
